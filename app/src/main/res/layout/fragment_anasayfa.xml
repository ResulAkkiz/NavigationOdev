<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnasayfaFragment">

    <Button
        android:id="@+id/gitAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Git > A"
        app:layout_constraintBottom_toTopOf="@+id/gitXButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anasayfaTextView"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/gitXButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Git > X"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gitAButton"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/anasayfaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ana Sayfa"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gitAButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>